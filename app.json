{
  "expo": {
    "name": "sommelai-app",
    "slug": "sommelai-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "scheme": "sommelai-app",     
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourname.sommelai"   
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.yourname.sommelai",         
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "expoRedirectUrl": "sommelai-app://stripe-redirect"
    }
  }
}

